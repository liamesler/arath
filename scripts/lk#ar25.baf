    PartyRested()
    CombatCounter(0)
    !See([ENEMY])
    Global("LK#ArathToBLovetalks","GLOBAL",9)
THEN
  RESPONSE #100
    SetGlobal("LK#ArathToBLovetalks","GLOBAL",10)
END

